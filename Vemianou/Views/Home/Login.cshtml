@{
    ViewBag.Title = "Connexion";
}
<div class="hero-wrap2" style="background-image: url('/Content/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container" style="height:250px">
        <div class="row no-gutters  align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate text-center mt-5">
                <h1 class="mb-3 bread font-weight-bold text-white align-middle" >Connexion</h1>
            </div>
        </div>
    </div>
</div>


<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-7 col-lg-7 justify-content-center mx-auto ">
                @if (!((String)ViewData["errins"]).IsEmpty())
                {
                    <div class="alert alert-success">
                        @ViewData["errins"]
                    </div>
                }
            </div>
        </div>
                
         <div class="row">
              <div class="col-md-12 col-md-7 col-lg-7 justify-content-center mx-auto border">

                  <form action="@Url.Action("Login","User")" method="POST">
                            <div class="form-group">
                                <label class="text-center">Nom utilisateur</label>
                                <input type="text" name="loginuser" class="form-control" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label class="text-center">Mot de passe</label>
                                <input type="password" name="passeuser" class="form-control" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Connexion" class="btn btn-primary py-3 px-5 float-right">
                            </div>
                        </form>
              </div>
         </div>
    </div>
</section>
<script>
    $(function () {
        $('#login').addClass("active");
    });
</script>