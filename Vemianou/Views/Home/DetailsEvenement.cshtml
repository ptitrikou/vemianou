@using Vemianou.ViewsModels
@model EvenementViewModel
@{
    ViewBag.Title = "Details";
    List<EvenementViewModel> autres = ViewBag.autres;
}

<div class="hero-wrap" style="background-image: url('/Content/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="@Url.Action("Index","Home")">Acceuil</a></span> <span class="mr-2"><a href="@Url.Action("Event","Home")">Actions</a></span> <span>Details</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Details</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                <h2 class="mb-3 mt-5 " style="color:#f86f2d">@Model.designation</h2>
                <p>@Model.description</p>
                <p>
                    <img src="/Content/images/image_8.jpg" alt="" class="img-fluid">
                </p>
                <p>@Model.details</p>

            </div> <!-- .col-md-8 -->
            <div class="col-md-4 sidebar ftco-animate">
              
                <div class="sidebar-box ftco-animate">
                    @foreach (string im in Model.images)
                    {
                        <a href="@("~/Content/images/"+im)" class="w-100 gallery image-popup d-flex justify-content-center align-items-center img ftco-animate mb-2" style="background-image: url(/Content/images/dossier1/IMG_0459.JPG);">
                            <div class="icon d-flex justify-content-center align-items-center">
                                <span class="icon-search"></span>
                            </div>
                        </a>

                    }
                </div>

                <div class="sidebar-box ftco-animate">
                    <h3>Autres Evenements </h3>
                    @foreach (EvenementViewModel ev in autres)
                    {
                        <div class="block-21 mb-4 d-flex">
                            <a class="blog-img mr-4" style="background-image:url(/Content/images/dossier3/IMG_8069.JPG);"></a>
                            <div class="text">
                                <h3 class="heading"><a href="@Url.Action("DetailsEvenement","Home",new { iditem = ev.iditem})">@ev.designation </a></h3>
                                <div class="meta">
                                    <div><a href="#"><span class="icon-calendar"></span> @ev.dateevent</a></div>
                                    @*<div><a href="#"><span class="icon-person"></span> Admin</a></div>
                                   <div><a href="#"><span class="icon-chat"></span> 19</a></div>*@
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</section>

<script>
    $(function () {
        $('#events').addClass("active");
    });
</script>

