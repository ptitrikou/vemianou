@using Vemianou.Models
@{
    USER user = Session["user"] as USER;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Admin Vemianou</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    @Styles.Render("~/Content/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css")
    <!-- JQVMap -->
    @Styles.Render("~/Content/admin/plugins/jqvmap/jqvmap.min.css")

    <!-- Font Awesome Icons -->
    @Styles.Render("~/Content/admin/plugins/fontawesome-free/css/all.min.css")

    <!-- Theme style -->
    @Styles.Render("~/Content/admin/dist/css/adminlte.min.css")
    @Styles.Render("~/Content/admin/dist/css/personal.css")
    @Styles.Render("~/Content/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css")
    @Styles.Render("~/Content/admin/plugins/datatables-rowgroup/css/rowGroup.bootstrap4.min.css")

    <!-- Tempusdominus Bootstrap 4 -->
    @Styles.Render("~/Content/admin/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css")

    <!-- summernote -->
    @Styles.Render("~/Content/admin/plugins/summernote/summernote-bs4.min.css")
    <!-- overlayScrollbars -->
    @Styles.Render("~/Content/admin/plugins/overlayScrollbars/css/OverlayScrollbars.css")
    <!-- Daterange picker -->
    @Styles.Render("~/Content/admin/plugins/daterangepicker/daterangepicker.css")
    @Styles.Render("~/Content/admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")
   
    @Styles.Render("~/Content/trumbowyg/dist/ui/trumbowyg.min.css")
    <!-- jQuery -->
    @Scripts.Render("~/Content/admin/plugins/jquery/jquery.min.js")
    @Scripts.Render("~/Content/admin/plugins/jquery-ui/jquery-ui.min.js")

    <!-- SweetAlert2 -->
    @Scripts.Render("~/Content/admin/plugins/sweetalert2/sweetalert2.min.js")

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light navbar-fixed-top">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

                <li class="nav-item ">
                    <a href="#" onclick="return deconnect()" class="nav-link">
                        <span class="font-weight-bold">Déconnexion</span>
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Admin")" class="brand-link">

                <span class="brand-text font-weight-light">Page admministrateur</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <!--<img src="/Content/assets3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" >-->
                        <i class="fa fa-user-circle text-white mt-2 "></i>
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@user.nomprenomsuser</a>

                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Admin")" class="nav-link">
                                <i class="nav-icon fas fa-calendar-week"></i>
                                <p>Acceuil</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Familles","Admin")" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Familles </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Categories","Admin")" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Sous Familles </p>
                            </a>
                        </li>

                        <li class="nav-item ">
                            <a href="@Url.Action("ListeEvenements","Admin")" class="nav-link">
                                <i class="nav-icon fas fa-bell"></i>
                                <p>Publications</p>
                            </a>
                        </li>

                        <li class="nav-item ">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-bell"></i>
                                <p>Publicite</p>
                            </a>
                        </li>

                        <li class="nav-item ">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-atlas"></i>
                                <p>Promotions</p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="fas fa-cogs nav-icon"></i>
                                <p>
                                    Paramètres
                                    <i class="fas fa-angle-left right"></i>

                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("ListeAdministrateurs","Admin")" class="nav-link">
                                        <i class="fas fa-user"></i>
                                        <p>Administrateurs</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            @RenderBody()
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Cristal.</strong>
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->

    @Scripts.Render("~/Content/admin/plugins/jquery/jquery.min.js")
    @Scripts.Render("~/Content/admin/plugins/jquery-ui/jquery-ui.min.js")

    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap -->
    @Scripts.Render("~/Content/admin/plugins/bootstrap/js/bootstrap.bundle.min.js")
    <!-- overlayScrollbars -->
    @Scripts.Render("~/Content/admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js")
    <!-- SweetAlert2 -->
    @Scripts.Render("~/Content/admin/plugins/sweetalert2/sweetalert2.min.js")
    <!-- Toastr -->
    @Scripts.Render("~/Content/admin/plugins/toastr/toastr.min.js")
    <!-- AdminLTE App -->
    @Scripts.Render("~/Content/admin/dist/js/adminlte.js")

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    @Scripts.Render("~/Content/admin/plugins/jquery-mousewheel/jquery.mousewheel.js")
    @Scripts.Render("~/Content/admin/plugins/raphael/raphael.min.js")
    @Scripts.Render("~/Content/admin/plugins/jquery-mapael/jquery.mapael.min.js")
    @Scripts.Render("~/Content/admin/plugins/jquery-mapael/maps/usa_states.min.js")
    <!-- ChartJS -->
    @Scripts.Render("~/Content/admin/plugins/chart.js/Chart.min.js")

    <!-- PAGE SCRIPTS -->
    @Scripts.Render("~/Content/admin/dist/js/pages/dashboard2.js")
    <!-- DataTables -->
    @Scripts.Render("~/Content/admin/plugins/datatables/jquery.dataTables.js")
    @Scripts.Render("~/Content/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/admin/plugins/pdfmake/pdfmake.js")
    @Scripts.Render("~/Content/admin/plugins/pdfmake/vfs_fonts.js")
    @Scripts.Render("~/Content/admin/plugins/jszip/jszip.min.js")
    @Scripts.Render("~/Content/admin/plugins/datatables-buttons/js/dataTables.buttons.min.js")
    @Scripts.Render("~/Content/admin/plugins/datatables-buttons/js/buttons.html5.min.js")
    @Scripts.Render("~/Content/admin/plugins/datatables-rowgroup/js/dataTables.rowGroup.min.js")
    @Scripts.Render("~/Content/admin/plugins/datatables-rowgroup/js/rowGroup.bootstrap4.min.js")
    <!-- jquery-validation -->
    @Scripts.Render("~/Content/admin/plugins/jquery-validation/jquery.validate.min.js")
    @Scripts.Render("~/Content/admin/plugins/jquery-validation/additional-methods.min.js")
    @Scripts.Render("~/Content/admin/plugins/sweetalert2/sweetalert2.min.js")
    <!-- bs-custom-file-input -->
    @Scripts.Render("~/Content/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js")

    @Scripts.Render("~/Content/trumbowyg/dist/trumbowyg.min.js")
    @Scripts.Render("~/Content/trumbowyg/dist/langs/fr.min.js")

    <script>
        $(function () {

            if ('@TempData["mescat"]' != "") {
                Swal.fire('','@TempData["mescat"]', 'success')
            }
            if ('@TempData["deletecatsuc"]' != "") {
                Swal.fire('','@TempData["deletecatsuc"]', 'success')
            }
            if ('@TempData["deletecater"]' != "") {
                Swal.fire('','@TempData["deletecater"]', 'error')
            }
            if ('@TempData["addcatsuc"]' != "") {
                Swal.fire('','@TempData["addcatsuc"]', 'success')
            }
            if ('@TempData["addcater"]' != "") {
                Swal.fire('','@TempData["addcater"]', 'error')
            }
            if ('@TempData["updatecatsuc"]' != "") {
                Swal.fire('','@TempData["updatecatsuc"]', 'success')
            }
            if ('@TempData["updatecater"]' != "") {
                Swal.fire('','@TempData["updatecater"]', 'error')
            }
            if ('@TempData["success"]' != "") {
                Swal.fire('','@TempData["success"]', 'success')
            }
            if ('@TempData["error"]' != "") {
                Swal.fire('','@TempData["error"]', 'error')
            }

        });
        $(function () {
            $('#example').DataTable({
                "responsive": true,
                "autoWidth": false,
                "language": {
                    "lengthMenu": "Affiche _MENU_ enregistrements ",
                    "zeroRecords": "Aucun enregistrement trouvé",
                    "info": "Affiche _PAGE_ enregistrements sur _PAGES_",
                    "infoEmpty": "",
                    "infoFiltered": "(recherche sur _MAX_ enregistrements)",
                    "search": "Rechercher",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Suivant",
                        "previous": "Precedent"
                    },

                }
            });
        });

        function deconnect() {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vous deconnecter ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        type: "POST", url: "/User/logout",
                        data: "",
                        success: function (data) {
                            window.location.href = "/";
                        },
                        contentType: "application/json; charset=utf-8",
                    });

                }
            })
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
