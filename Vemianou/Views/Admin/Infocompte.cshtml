@using Vemianou.Models;
@model USER
@{
    ViewBag.Title = "InfoCompte";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark text-blue">Compte administrateur</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Acceuil</a></li>
                    <li class="breadcrumb-item active">Mon compte</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    @if (TempData["error"] != null)
    {
        <div class="container -fluid">
            <div class="alert alert-danger alert-dismissible">
                @TempData["error"]
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
        </div>

    }
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Informations</h3>
                        
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form action="@Url.Action("updateUser","User")" method="POST" enctype="multipart/form-data">
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>Nom utilisateur</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    @Html.EditorFor(model => model.iduser, new { htmlAttributes = new {@type ="hidden",@class = "form-control", @readonly="true" } })
                                    @Html.EditorFor(model => model.nomuser, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.nomuser, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>Prénom utilisateur</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    @Html.EditorFor(model => model.prenomsuser, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.prenomsuser, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>E-mail utilisateur</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>Adresse</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    @Html.EditorFor(model => model.adressuser, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.adressuser, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>Telephone</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    <div class="row">
                                        <div class="col-3">
                                            <input type="text" class="form-control" value="+228" readonly />
                                        </div>
                                        <div class="col-9">
                                            @Html.EditorFor(model => model.teluser, new { htmlAttributes = new { @class = "form-control", @required = "true"  } })
                                            @Html.ValidationMessageFor(model => model.teluser, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>Telephone2</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    <div class="row">
                                        <div class="col-3">
                                            <input type="text" class="form-control" value="+228" readonly />
                                        </div>
                                        <div class="col-9">
                                            @Html.EditorFor(model => model.details1, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                            @Html.ValidationMessageFor(model => model.teluser, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-4 col-md-4">
                                    <label>Mot de passe</label>
                                </div>
                                <div class="col-lg-8 col-md-8">
                                    @Html.EditorFor(model => model.passeuser, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.passeuser, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row float-right">
                                <button type="submit" class="btn btn-success text-white">Modifier</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
   
</section>
