    <!-- /.container-fluid -->
</section>
<div class="modal fade" id="modal-image">
    <div class="modal-dialog modal-lg">

        <div Class="modal-content">
            <div Class="modal-header">
                <h4 Class="modal-title" id="lib">Nouvelle image</h4>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("updateImage","Admin")" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" id="id" name="id" value="@Model.iditem" hidden required />
                        <input type="hidden" class="form-control" id="nim" name="nim" required />
                        <input type="hidden" class="form-control" id="oldimage" name="oldimage" required />
                        <input type="file" class="form-control" name="file1" required />
                        <input type="hidden" class="form-control" name="type" value="@ViewBag.type"/>
                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<!-- /.content -->
@section scripts{
    <script>
        function deleteArticle(id) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vraiment supprimer ce article ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
               if (result.value) {
                   window.location.href = "/Admin/deleteArticle?id=" + id;
               }
            })
        }

        function updateImage(nim,oldimage) {
           
            $("#nim").val(nim);
            $("#oldimage").val(oldimage);
            $('#modal-image').modal('show');
        }

    </script>
}

