
@using CristalPalace.Models
@model List<item>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Promotions";
    List<item> listItems = ViewBag.prom;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Promotions</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Acceuil</a></li>
                    <li class="breadcrumb-item active">Article en promotions</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid float-right mb-2">

    </div>
    <br />
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste des articles</h3>
                        @*<div class="row float-right">
                            <a href="@Url.Action("NouveauArticle")" class="btn btn-success">Nouveau article</a>
                        </div>*@
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="example" class="table table-responsive  table-bordered table-striped  dtr-inline">
                            <thead>
                                <tr>
                                    <th>Designation</th>
                                    <th>Prix1</th>
                                    <th>Taux remiz</th>
                                    <th>Prix2</th>
                                    <th>Notification</th>
                                    <th>Date de publication</th>
                                    <th>Categorie</th>
                                    @*<th>Action</th>*@
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (listItems.Any())
                                {
                                    foreach (item it in listItems)
                                    {
                                        <tr>
                                            <td>@it.designation</td>
                                            <td>@it.prixitem @it.devise</td>
                                            <td>@it.tauxremiz @("%")</td>
                                            <td>@it.prix2 @it.devise</td>
                                            <td>@it.notifs</td>
                                            <td>@it.datpublish.ToString()</td>
                                            <td>
                                                @{
                                                    CristalPalaceModel db = new CristalPalaceModel();
                                                    sousfamill sf = db.sousfamill.Find(it.category);
                                                }
                                                @sf.libsousfamill
                                            </td>
                                            <td width="10px"> <a href="@Url.Action("showArticle","Admin",new {id=it.iditem })" onclick=""><i class="fas fa-edit blue" style="color:#0069d9"></i></a></td>

                                            @*<td width="10px"> <a href="#" onclick="deleteArticle(@it.iditem )"><i class="fa fa-trash blue" style="color:#0069d9"></i></a></td>*@
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9"> <h5>Aucun article enregistré !</h5></td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>


<!-- /.content -->
@section scripts{
    <script>
        function deleteArticle(id) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vraiment supprimer ce article ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    window.location.href = "/Admin/deleteArticle?id=" + id;
                }
            })
        }

        function updateCategorie(id, nom) {

            $("#idcat").val(id);
            $("#nomcat").val(nom);
            $('#update-categorie').modal('show');
        }

    </script>
}





