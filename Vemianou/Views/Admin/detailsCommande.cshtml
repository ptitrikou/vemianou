@using Vemianou.Models;
@using System.Globalization;
@model VENTE
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Details vente";
    NumberFormatInfo numf = new CultureInfo("fr-FR", false).NumberFormat;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Details des commandes</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Home</a></li>
                    <li class="breadcrumb-item active">Details ommande</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid float-right mb-2">

    </div>
    <br />
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Info commande</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="overflow-x:auto">

                        <table id="" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Numéro commande</th>
                                    <th>Date commande</th>
                                    <th>Client</th>
                                    <th>Montant</th>
                                    <th>Etat de la commande</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.codevente</td>
                                    <td>@Model.datvente</td>
                                    <td>
                                        @Model.USER.nomprenomsuser
                                    </td>
                                    <td>
                                        @Model.totalvente.ToString("N0",numf) @("FCFA")
                                    </td>
                                    <td>
                                        @if (Model.etatvente == 0)
                                        {
                                            <small class="badge badge-success">nouveau</small>
                                        }
                                        else
                                        {
                                            <small class="badge badge-warning">commande livré</small>
                                        }
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Menus achetés</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="overflow-x:auto">

                        <table id="" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Menu</th>
                                    <th>Prix unitaire</th>
                                    <th>Qte</th>
                                    <th>Montant</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DETVENTE art in Model.DETVENTE)
                                {

                                    <tr>

                                        <td class="cart__price">
                                            <img src="/Content/images/@art.ITEM.imagpath1" alt="" style="width:80px;height:80px" class="img-fluid">
                                        </td>

                                        <td>
                                            @art.ITEM.designation
                                        </td>
                                        <td>@art.prixunit.ToString("N0",numf) FCFA</td>
                                        <td>@art.qteachat </td>
                                        <td>@art.soustot.ToString("N0",numf) FCFA </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

                <div class="row-fluid float-right mb-2">
                    @if (@Model.etatvente == 0)
                    {
                        <button class="btn btn-success" onclick="recieve(@Model.idvente)">Signaler la reception</button>
                    }

                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>


<!-- /.content -->
@section scripts{
    <script>
        function deleteArticle(id) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vraiment supprimer ce article ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    window.location.href = "/Admin/deleteArticle?id=" + id;
                }
            })
        }

        function updateCategorie(id, nom) {

            $("#idcat").val(id);
            $("#nomcat").val(nom);
            $('#update-categorie').modal('show');
        }
        function recieve(id) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "La commande est reçu par le client ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    window.location.href = "/Admin/updateCommande?idcommande=" + id;
                }
            })
        }
    </script>
}



