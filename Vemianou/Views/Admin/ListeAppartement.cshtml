
@using Cristal.ViewsModels
@model List<AppartementViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Categories";
    int typ = 1;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Liste des appartements</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Acceuil</a></li>
                    <li class="breadcrumb-item active">Liste des appartements</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid float-right mb-2">

    </div>
    <br />
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste des appartements</h3>
                        <div class="row float-right">
                            <a href="@Url.Action("AjouterAppartement")" class="btn btn-success">Nouvel appartement</a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="overflow-x:auto">

                        <table id="example" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th>Designation</th>
                                    <th>Description</th>
                                    <th>Details</th>
                                    <th>Nbre personne</th>
                                    <th>Prix/nuit</th>
                                    <th>Prix/jour</th>
                                    <th>Date de publication</th>
                                    <th>Categorie</th>
                                    <th>Action</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (AppartementViewModel apt in Model)
                                    {
                                <tr>
                                    <td>@(Model.IndexOf(apt) + 1)</td>
                                    <td><img src="~/Content/images/@apt.impath" style="height:70px;width:auto" alt=""></td>
                                    <td>@apt.designation</td>
                                    <td>@apt.description</td>

                                    <td>
                                        <ul>
                                            @foreach (string st in apt.details)
                                            {
                                                <li>@st </li>
                                            }
                                        </ul>
                                    </td>
                                    <td>@apt.nbpersonne</td>
                                    <td>@apt.prix @apt.devise</td>
                                    <td>@apt.prix2 @apt.devise</td>
                                    <td>@apt.datpublish</td>
                                    <td>
                                        @apt.categorie
                                    </td>
                                    <td width="10px">
                                        <a href="@Url.Action("showItem","Admin",new {id=apt.iditem,type=1})" onclick=""><i class="fas fa-edit blue" style="color:#0069d9"></i></a>                     
                                        <a href="#" onclick="deleteArticle(@apt.iditem,@typ)"><i class="fa fa-trash blue" style="color:#0069d9"></i></a>

                                    </td>

                                </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9"> <h5>Aucun appartement enregistrée !</h5></td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>


<!-- /.content -->
@section scripts{
    <script>
        function deleteArticle(id,type) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vraiment supprimer ce article ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    window.location.href = "/Admin/deleteItem?id=" + id +"&type=" + type;
                }
            })
        }

        function updateCategorie(id, nom) {

            $("#idcat").val(id);
            $("#nomcat").val(nom);
            $('#update-categorie').modal('show');
        }

    </script>
}





