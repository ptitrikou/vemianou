@using Vemianou.Models;
@using System.Globalization;
@model List<VENTE>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Accueil";
    int cmdencours = ViewBag.cmdencours;
    int cmdelivre = ViewBag.cmdlivre;
    NumberFormatInfo numf = new CultureInfo("fr-FR", false).NumberFormat;
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Tableau de bord</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Acceuil</a></li>
                    <li class="breadcrumb-item active">Tableau de bord</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Count</h3>

                        <p>Commandes éffectuées</p>
                    </div>
                    <div class="icon">
                        <!--<i class="ion ion-bag"></i>-->
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="@Url.Action("Index","Admin")" class="small-box-footer">Détails <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@cmdencours</h3>

                        <p>Nouvelles Commandes </p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="@Url.Action("NouvellesCommandes","Admin")" class="small-box-footer">Détails <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.nclients</h3>

                        <p>Enregistrement clients</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="@Url.Action("listeUsers","Admin")" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>65</h3>

                        <p>Unique Visitors</p>
                    </div>
                    <div class="icon">
                        <!--<i class="ion ion-pie-graph"></i>-->
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="container-fluid mt-3">
                <h3 class="m-0 text-blue mb-4">Liste des commandes</h3>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="ion ion-clipboard mr-1"></i>
                            Liste des commandes
                        </h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example" class="table table-bordered table-striped  dtr-inline">
                            <thead class="bg-gradient-blue text-white">
                                <tr>
                                    <th>Numero commande</th>
                                    <th>Montant</th>
                                    <th>Date de la commande</th>
                                    <th>Etat de la commande</th>
                                    <th>Détails commande</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (VENTE v in Model)
                                    {
                                        <tr>
                                            <td class="text-blue">@v.codevente</td>
                                            <td>@v.totalvente.ToString("N0", numf) @("FCFA")</td>
                                            <td>@v.datvente</td>
                                            <td>
                                                @if (v.etatvente == 0)
                                                {
                                                    <small class="badge badge-success">nouveau</small>
                                                }
                                                else
                                                {
                                                    <small class="badge badge-warning">commande livré</small>
                                                }

                                            </td>

                                            <td width="10px"> <a href="@Url.Action("detailsCommande","Admin",new {idcommande = v.idvente})" onclick=""><i class="fas fa-edit blue" style="color:#0069d9"></i></a></td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9"> <h5>Aucun Menu enregistrée !</h5></td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.Left col -->
          
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>