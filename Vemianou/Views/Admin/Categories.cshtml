@using Vemianou.Models;
@{
   /**/

   Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
   ViewBag.Title = "Categories";
   List<SOUSFAMILL> listCategories = ViewBag.categories;
   List<FAMILL> listFamilles = ViewBag.familles;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Sous Familles</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Home</a></li>
                    <li class="breadcrumb-item active">Sous Familles</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid float-right mb-2">

    </div>
    <br />
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste des sous familles</h3>
                        <div class="row float-right">
                            <buton class="btn btn-primary" data-toggle="modal" data-target="#modal-categorie">Nouvelle sous famille</buton>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="overflow-x:auto">

                        <table id="example" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nom sous famille</th>
                                    <th>Image sous famille</th>
                                    <th>Nom famille</th>
                                    <th>Modifier</th>
                                    <th>Modifier image</th>
                                    <th>Supprimer</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (listCategories.Count > 0)
                                {
                                    foreach (SOUSFAMILL sf in listCategories)
                                    {
                                        <tr>
                                            <td>@sf.libsousfamill</td>
                                            <td><img src="~/Content/images/@sf.imgsousfamill1" class="img-responsive" height="100px"width="150px" /></td>
                                            <td>
                                                @sf.FAMILL.libfamill
                                            </td>
                                            <td width="10px"> <a href="#" onclick="updateCategorie(@sf.idsousfamill,'@sf.libsousfamill','@sf.idfamill')"><i class="fas fa-edit blue" style="color:#0069d9"></i></a></td>
                                            <td width="10px"> <a href="#" onclick="updateImageCategorie(@sf.idsousfamill,'@sf.libsousfamill','@sf.imgsousfamill1')"><i class="fas fa-edit blue" style="color:#0069d9"></i></a></td>
                                            <td width="10px"> <a href="#" onclick="deleteCategorie(@sf.idsousfamill)"><i class="fa fa-trash blue" style="color:#0069d9"></i></a></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6"> <h5>Aucune catégorie enregistrée !</h5></td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>
<div class="modal fade" id="modal-categorie">
    <div class="modal-dialog modal-lg">

        <div Class="modal-content">
            <div Class="modal-header">
                <h4 Class="modal-title" id="lib">Nouvelle catégorie d'article</h4>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("addCategorie","Admin")" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Libellé</label>
                        <input type="text" class="form-control" name="libsousfamill" required />
                    </div>
                    <div class="form-group">
                        <label>Famille</label>
                        <select class="form-control" name="idfamill">
                            @if (listFamilles.Count > 0)
                            {
                                foreach (FAMILL fm in listFamilles)
                                {
                                    <option value="@fm.idfamill">@fm.libfamill</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" class="form-control" name="file" required accept="image/*" />
                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="update-categorie">
    <div class="modal-dialog modal-lg">

        <div Class="modal-content">
            <div Class="modal-header">
                <h4 Class="modal-title" id="lib">Modifier la catégorie</h4>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("updateCategorie","Admin")" method="POST">
                    <div class="form-group">
                        <input type="text" id="idcat" class="form-control" name="idsousfamill" required hidden />
                        <input type="text" id="nomcat" class="form-control" name="libsousfamill" required />
                    </div>
                    <div class="form-group">
                        <label>Famille</label>
                        <select class="form-control" name="idfamill" id="typ">
                            @if (listFamilles.Count > 0)
                            {
                                foreach (FAMILL fm in listFamilles)
                                {
                                   
                                    <option value="@fm.idfamill">@fm.libfamill</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="update-image-categorie">
    <div class="modal-dialog modal-lg">

        <div Class="modal-content">
            <div Class="modal-header">
                <h4 Class="modal-title" id="lib">Nouvelle image <span id="nlib"></span></h4>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("updateImageCategorie","Admin")" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" id="idcat2" class="form-control" name="id" required hidden />
                        <input type="text" id="olim"   class="form-control"   name="oldimage" hidden/>
                        <input type="file" id="image"  class="form-control"  name="file1"  accept="image/*" required />
                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<!-- /.content -->
@section scripts{
    <script>
        function deleteCategorie(id) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vraiment supprimer cette catégorie ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    window.location.href = "/Admin/deleteCategorie?id=" + id;
                }
            })
        }

        function updateCategorie(id,nom,famill) {
            $("#idcat").val(id);
            $("#nomcat").val(nom);
            $("#typ").val(famill);

            $('#update-categorie').modal('show');
        }

        function updateImageCategorie(id,nom,oldimage) {
            $("#idcat2").val(id);
            $("#nlib").text(nom);
            $("#olim").val(oldimage);
            $('#update-image-categorie').modal('show');
        }

    </script>
}


