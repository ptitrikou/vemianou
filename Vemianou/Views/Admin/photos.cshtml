@using Vemianou.ViewsModels
@model List<EvenementViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Photos";
    int typ = 1;
    List<SousfamillViewModel> categories = ViewBag.categories;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Liste des photos publiées</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Acceuil</a></li>
                    <li class="breadcrumb-item active">Liste des photos</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid float-right mb-2">

    </div>
    <br />
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste des photos</h3>
                        <div class="row float-right">
                            <a href="#" class="btn btn-success" data-toggle="modal" data-target="#modal-image">Nouveau</a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="overflow-x:auto">
                        <table id="example" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Photo</th>
                                    <th>Date de publication</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (EvenementViewModel vent in Model)
                                    {
                                        <tr>
                                            <td>@(Model.IndexOf(vent) + 1)</td>
                                            <td><img src="~/Content/images/@vent.imagepath" style="height:70px;width:auto" alt=""></td>

                                            <td>@vent.datepublish</td>
                                            <td width="10px">
                                                <a href="#" onclick="deleteArticle(@vent.iditem,@typ)"><i class="fa fa-trash blue" style="color:#0069d9"></i></a>
                                            </td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9"> <h5>Aucune photo enregistrée !</h5></td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="modal fade" id="modal-image">
                        <div class="modal-dialog modal-lg">

                            <div Class="modal-content">
                                <div Class="modal-header">
                                    <h4 Class="modal-title" id="lib">Nouvelles photo</h4>
                                    <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </Button>
                                </div>
                                <div Class="modal-body">
                                    <form action="@Url.Action("newPhoto","Admin")" method="POST" enctype="multipart/form-data" id="sub">
                                        <div class="row mb-2">
                                            <div class="col-lg-3 col-md-3 d-none">
                                                <label>Categorie</label>
                                            </div>
                                            <div class="col-lg-9 col-md-9">
                                                <select class="form-control" name="category" hidden>
                                                    @if (categories.Count > 0)
                                                    {
                                                        foreach (SousfamillViewModel sf in categories)
                                                        {
                                                            <option value="@sf.idsousfamill">@sf.libsousfamill</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="file" class="form-control" name="file" multiple required/>
                                        </div>
                                        <div class="row-fluid float-right">
                                            <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                                            <Button type="submit" Class="btn btn-success">Valider</Button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>


<!-- /.content -->
@section scripts{
    <script>
        $(function () {
            $('#sub').on('submit', function (e) { //use on if jQuery 1.7+
                //e.preventDefault();  //prevent form from submitting
                let maxSize = 2097412;
                let isOk = true;
                $('input[type=file]').each(function () {
                    if (typeof this.files[0] !== 'undefined') {
                        //var maxSize = parseInt($(this).attr('max-size'), 10),
                        size = this.files[0].size;
                        if (maxSize < size) {
                            isOk = false;
                        }
                        return isOk;
                    }
                });
                if (isOk == false) {
                    e.preventDefault();
                    Swal.fire('Taille des fichiers dépassé', '@TempData["error"]', 'error');
                } else {
                    $("#imodal").modal('show');
                }
            });
        });
        function deleteArticle(id,type) {
            Swal.fire({
                title: 'Etes-vous sur?',
                text: "Voulez-vous vraiment supprimer cet evenement ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui',
                cancelButtonText: 'Non'
            }).then((result) => {
                if (result.value) {
                    window.location.href = "/Admin/deleteItem?id=" + id +"&type=" + type;
                }
            })
        }
    </script>
}





