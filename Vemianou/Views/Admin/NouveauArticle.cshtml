@using Vemianou.Models;
@model ITEM
@{
    ViewBag.Title = "Nouveau departement";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SOUSFAMILL> listeCategorie = ViewBag.categories;
}



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark text-blue">Nouveau Menu</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Acceuil</a></li>
                    <li class="breadcrumb-item active">Nouveau Menu</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    @if (TempData["error"] != null)
    {
        <div class="container -fluid">
            <div class="alert alert-danger alert-dismissible">
                @TempData["error"]
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
        </div>

    }
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Ajouter un nouveau menu</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form action="@Url.Action("AjouterMenu","Admin")" method="POST" enctype="multipart/form-data">
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Designation</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    @Html.EditorFor(model => model.designation, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.designation, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Description</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    @Html.EditorFor(model => model.designdetails, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.designdetails, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Details</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <textarea class="form-control" name="designdetails2" rows="5" required></textarea>
                                    @Html.ValidationMessageFor(model => model.designdetails2, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Prix</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    @Html.EditorFor(model => model.prixitem, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.prixitem, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Remise</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <div Class="input-group input-group mb-0">
                                        @Html.EditorFor(model => model.tauxremiz, new { htmlAttributes = new { @class = "form-control" } })
                                        <div Class="input-group-append">
                                            <span Class="input-group-text">%</span>
                                        </div>
                                    </div>

                                    @Html.ValidationMessageFor(model => model.tauxremiz, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Prix2</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    @Html.EditorFor(model => model.prix2, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.prix2, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Devise</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="text" name="devise" class="form-control" id="devise" value="FCFA" readonly />
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Ordre</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="number" name="ordre1" class="form-control" id="devise" min="0" />
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Categorie</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <select class="form-control" name="category">
                                        @if (listeCategorie.Count > 0)
                                        {
                                            foreach (SOUSFAMILL sf in listeCategorie)
                                            {
                                                <option value="@sf.idsousfamill">@sf.libsousfamill</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Details livraison</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    @Html.EditorFor(model => model.detailslivraison, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.detailslivraison, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier1</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file1" id="imagpath1" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier2</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file2" id="imagpath2" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier3</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file3" id="imagpath3" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier4</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file4" id="imagpath4" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier5</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file5" id="imagpath5" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier6</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file6" id="imagpath6" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier7</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file7" id="imagpath7" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <label>Fichier8</label>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <input type="file" class="form-control" name="file8" id="imagpath8" value="" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal" style="cursor:pointer">Annuler</button>
                                <button type="submit" class="btn btn-success" style="cursor:pointer">Enregistrer</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section scripts{

}


