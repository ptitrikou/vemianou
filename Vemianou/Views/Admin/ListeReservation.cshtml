@using Cristal.ViewsModels;
@model List<ReservationViewModel2>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Reservation";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-blue">Reservations clients</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Acceuil</a></li>
                    <li class="breadcrumb-item active">Reservation</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
      
        <div class="row">
            
             
                <div class="container-fluid mt-3">
                   
                    <div class="card w-100">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="ion ion-clipboard mr-1"></i>
                                Liste des reservation
                            </h3>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body" style="overflow-x:auto">
                            <table id="example" class="table table-bordered table-striped  dtr-inline">
                                <thead class="bg-gradient-blue text-white">
                                    <tr>
                                        <th></th>
                                        <th>Code reservation</th>
                                        <th>Date de reservation</th>
                                        <th>Appartement</th>
                                        <th>Date debut</th>
                                        <th>Nbre de jour</th>
                                        <th>Date fin</th>
                                        <th>Client</th>
                                        <th>Demande speciale</th>  
                                        <th>Etat de la reservation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count > 0)
                                    {
                                        foreach (ReservationViewModel2 v in Model)
                                        {
                                            <tr>
                                                <td class="text-blue">@(Model.IndexOf(v) + 1)</td>
                                               
                                                <td>@v.codereservation</td>
                                                <td>@v.datereservation</td>
                                                <td>@v.item.designation</td>
                                                <td>@v.datedebut.ToString("dd/MM/yyyy")</td>
                                                <td>@v.njour</td>
                                                <td>@v.datefin.ToString("dd/MM/yyyy")</td>
                                                <td>@v.noms</td>
                                                <td>@v.demandespeciale</td>
                                                <td>
                                                    @if (v.etatreser == 0)
                                                    {
                                                        <small class="badge badge-success">Pas débuté</small>
                                                    }
                                                    @if (v.etatreser == 1)
                                                    {
                                                        <small class="badge badge-warning">En cours</small>

                                                    }
                                                    @if (v.etatreser == 2)
                                                    {
                                                        <small class="badge badge-danger">Dépassée</small>

                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9"> <h5>Aucune reservation  enregistrée !</h5></td>
                                        </tr>

                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
           
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
